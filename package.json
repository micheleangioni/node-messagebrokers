{
  "name": "@micheleangioni/node-messagebrokers",
  "version": "0.7.0",
  "description": "High level library which abstracts low level Message Brokers clients ",
  "keywords": [
    "TypeScript",
    "Message Brokers",
    "Kafka"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run lint && rm -rf ./build && tsc --strictNullChecks",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "test": "jest --runInBand --forceExit --verbose",
    "prepublishOnly": "npm test && npm run lint",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "author": "Michele Angioni <michele.angioni@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/micheleangioni/node-messagebrokers"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "verbose": true
  },
  "dependencies": {
    "aws-sdk": "^2.734.0",
    "cloudevents": "^4.0.0",
    "kafkajs": "^1.15.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^12.19.15",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.18.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "jest": "^26.4.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
