{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib":["es2018"],
    "esModuleInterop": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
